@page
@model Torneo.App.Frontend.Pages.Partidos.IndexModel
@{
}

<h1>Nuevo Partido</h1>
<a class="btn btn-primary btn-lg" asp-page="./Create">Crear partido</a>
<table class="table table-dark table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Fecha</th>
            <th scope="col">Equipo local</th>
            <th scope="col">Equipo visitante</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var partido in Model.partidos)
        {
            <tr>
                <th>@partido.Id</th>
                <td>@partido.FechaHora</td>
                <td>@partido.Local.Nombre</td>
                <td>@partido.Visitante.Nombre</td>
                <td>
                    <a class="btn btn-success" asp-page="./Details" asp-route-id="@partido.Id">
                        Detalle
                    </a>
                    <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@partido.Id">
                        Editar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>